<?xml version="1.0" encoding="UTF-8"?> <!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>


		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">mysql</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/course?useTimezone=true&amp;serverTimezone=UTC</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">false</property>
		<property name="hbm2ddl.auto">update</property>

		<mapping class="br.edu.ufal.model.User" />
		<mapping class="br.edu.ufal.model.Profile"/>
		<mapping class="br.edu.ufal.model.ProfessionalInformation"/>
		<mapping class="br.edu.ufal.model.EducationalInformation"/>
		
		
		

		<!-- <mapping class="br.ufal.ic.extra.Person" /> -->
		<!--<mapping class="br.ufal.ic.extra.CellPhone" /> -->




	</session-factory>
</hibernate-configuration>

